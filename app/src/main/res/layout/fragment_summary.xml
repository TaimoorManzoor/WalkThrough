<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/darkblue"
    tools:context=".activites.SummaryFragment">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/_20sdp"
           android:text="Order Summary"
           android:textAlignment="center"
           android:textColor="@color/white"/>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/baseline_check_circle_24"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/_12sdp"
           android:layout_marginLeft="@dimen/_18sdp"
           android:layout_marginRight="@dimen/_18sdp"
           android:text="You will receive an order confirmation email shortly with the details of you  order"
           android:textAlignment="center"
           android:textColor="@color/white"/>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/checkout_recycle_view"
           android:layout_margin="@dimen/_40sdp"
           android:layout_width="match_parent"
           android:background="@drawable/whiteroundbutton"
           android:layout_height="wrap_content" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/lightblue_round"
           android:layout_margin="@dimen/_10sdp"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="@dimen/_10sdp"

               android:orientation="horizontal">


               <TextView
                   android:id="@+id/textView16"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_14sdp"
                   android:text="Amount" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="@dimen/_5sdp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/subtotal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_12sdp"
                   android:text="@string/sub_total" />
               <TextView
                   android:id="@+id/subtotalamount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_12sdp"
                   android:text="245.00 Rs" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="@dimen/_5sdp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/taxtotal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_12sdp"
                   android:text="@string/total_tax" />
               <TextView
                   android:id="@+id/taxamount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_12sdp"
                   android:text="145.00 Rs" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/white"
               android:orientation="horizontal">
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="@dimen/_5sdp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/total"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_12sdp"
                   android:text="Total Amout" />
               <TextView
                   android:id="@+id/totalamount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/white"
                   android:textSize="@dimen/_12sdp"
                   android:text="385.00 Rs" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/_20sdp"
           android:layout_marginRight="@dimen/_20sdp"
           android:orientation="horizontal"
           android:layout_marginBottom="@dimen/_50sdp">

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/continueshopping"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/whiteroundbutton"
               android:textColor="@color/darkblue"
               android:text="Continue Shopping" />
       </LinearLayout>
   </LinearLayout>
   </ScrollView>


</LinearLayout>