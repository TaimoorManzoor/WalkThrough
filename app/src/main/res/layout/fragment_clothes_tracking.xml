<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkblue"
    tools:context=".activites.ClothesTrackingFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/cardtop"
            android:layout_marginBottom="@dimen/_20sdp"
            >

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_30sdp"
                android:text="Tracking Order" />


            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_20sdp"
                android:text="Order Status" />

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_12sdp"
                android:text="Tracking Order" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/tracking_order"
                android:layout_margin="@dimen/_20sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_20sdp"
                android:text="Order Received" />
            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/check_circle"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:text="9:18 Am  12 May 2023" />

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_20sdp"
                android:text="On The Way" />
            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/baseline_cancel_24"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_10sdp"
                android:text="9:18 Am  12 May 2023" />


            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_20sdp"
                android:text="Delivered" />
            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/baseline_cancel_24"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:text="9:18 Am  12 May 2023" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>