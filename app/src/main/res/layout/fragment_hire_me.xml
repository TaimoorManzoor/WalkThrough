<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkblue"
    tools:context=".activites.HireMeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardtop"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_60sdp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginLeft="@dimen/_16ssp"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/darkblue"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lightblue_round"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/whiteroundbutton"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/_20sdp"
                        android:text="Google Map Key " />
                </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/_16ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lightblue_round"
                android:textColor="@color/white"
                android:text="Price"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/_16ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lightblue_round"
                android:textColor="@color/white"
                android:text="Far from you"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/_16ssp"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/lightblue_round"
                android:textColor="@color/white"
                android:text="Hire ME"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>